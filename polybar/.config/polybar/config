[module/bspwm-modes]
type = internal/bspwm
; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; Default: true
pin-workspaces = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; Set the scroll cycle direction
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces
; containing 'code' in the label
; Default: false
fuzzy-match = true

format = <label-mode>

label-separator-padding = 1
label-monocle = "  "
label-monocle-foreground = ${colors.soft-highlight}
label-floating = ""
label-floating-foreground = ${colors.soft-highlight}
label-locked = "  "
label-locked-foreground = ${colors.soft-highlight}
label-sticky = "  "
label-sticky-foreground = ${colors.soft-highlight}

label-focused-font = 2
label-occupied-font = 2
label-empty-font = 2
label-urgent-font = 2


[module/bspwm]
type = internal/bspwm
; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; Default: true
pin-workspaces = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Set the scroll cycle direction
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces
; containing 'code' in the label
; Default: false
fuzzy-match = true

format = <label-state>
label-focused-font = 2
label-occupied-font = 2
label-empty-font = 2
label-urgent-font = 2


ws-icon-1 = web;
ws-icon-2 = code;
ws-icon-3 = opt1;
ws-icon-4 = opt2;
ws-icon-5 = opt3;
ws-icon-6 = opt4;
ws-icon-7 = opt5;
ws-icon-8 = opt6;
ws-icon-9 = msg;
ws-icon-0 = music;
ws-icon-default = 

label-focused = %icon%
label-focused-foreground = ${colors.soft-highlight}
label-occupied = %icon%
label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-empty = %icon%
label-empty-foreground = ${colors.inactive}

label-separator-padding = 1
label-separator = "|"

